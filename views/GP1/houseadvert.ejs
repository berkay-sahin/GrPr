<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="style.css">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <title>Hello, world!</title>
  </head>
  <body>

    <!--Navbar Start-->
    <%- include('partials/_navbar') -%>
  <!-- Navbar End -->

  <div class="container">
      <div class="row">
        <div class="col-4">         <!--Side Bar Start-->
          <%- include('partials/_sidebar') -%>
          </div>      <!--Side Bar End-->
        
            <div class="col-8">

              <form method="post" action="/addhouse" encType="multipart/form-data">

                <div class="row">
                <div class="form-floating mb-2">
                    <input type="text" name="evbaslik" class="form-control" id="floatingInput" placeholder="/">
                    <label class="ms-2" for="floatingInput">İlan Başlığı</label>
                  </div>
            </div>
            <div class="col-8 ">
                <div class="mb-3">
                    <label for="formFile"  class="form-label">İlanınıza Resim Ekleyin</label>
                    <input name="evfoto" class="form-control"  type="file" id="formFile">
                  </div>
            </div>
            <div class="col-12">
                <div class="form-floating mb-2">
                    <input type="text" name="evaciklama" class="form-control" id="floatingInput" placeholder="/">
                    <label class="ms-2" for="floatingInput">İlan Açıklaması</label>
                  </div>
            </div>
            <div class="row">
                <div class="col-6 mt-2">
                    <input type="text" name="emlaktipi" class="form-control" placeholder="Emlak Tipi" aria-label="Emlak Tipi">
                  </div>
                  <div class="col-6 mt-2">
                    <input type="text" name="tür" class="form-control" placeholder="Tür" aria-label="Tür">
                  </div>
                  <div class="col-6 mt-2">
                    <input type="text" name="boyut" class="form-control" placeholder="Boyut" aria-label="Boyut">
                  </div>
                  <div class="col-6 mt-2">
                    <input type="text" name="odasayisi" class="form-control" placeholder="Oda Sayısı" aria-label="Oda Sayısı">
                  </div>
                  <div class="col-6 mt-2">
                    <input type="text" class="form-control" name="katsayisi" placeholder="Kat Sayısı/Bulunduğu Kat" aria-label="Kat Sayısı/Bulunduğu Kat">
                  </div>
                  <div class="col-6 mt-2">
                    <input type="text" class="form-control" name="sehir" placeholder="Şehir" aria-label="Şehir">
                  </div>
                  <div class="col-6 mt-2">
                    <input type="text" class="form-control" name="mahalle" placeholder="Mahalle" aria-label="Mahalle">
                  </div>
                  <div class="col-6 mt-2">
                    <input type="text" class="form-control" name="esya" placeholder="Eşyalı" aria-label="Eşyalı">
                  </div>
                  <div class="col-6 mt-2">
                    <input type="text" class="form-control"  name="aidat" placeholder="Aidat" aria-label="Aidat">
                  </div>
                  <div class="col-6 mt-2">
                    <input type="text" class="form-control" name="binayasi" placeholder="Bina Yaşı" aria-label="Bina Yaşı">
                  </div>
                  <div class="col-6 mt-2">
                    <input type="text" class="form-control" name="balkonsayisi" placeholder="Balkon Sayısı" aria-label="Balkon Sayısı">
                  </div>
                  <div class="col-6 mt-2">
                    <input type="text" class="form-control" name="cephe" placeholder="Baktığı Cephe" aria-label="Baktığı Cephe">
                  </div>
                  <div class="col-6 mt-2">
                    <input type="text" class="form-control" name="bahce" placeholder="Bahçe" aria-label="Bahçe">
                  </div>
                  <div class="col-6 mt-2">
                    <input type="text" class="form-control" name="isinma" placeholder="Isıtma Türü" aria-label="Isıtma Türü">
                  </div>
                  <div class="col-6 mt-2">
                    <input type="text" class="form-control" name="kimden" placeholder="Kimden" aria-label="Kimden">
                  </div>
                  <div class="col-6 mt-2">
                    <input type="text" class="form-control" name="deprem" placeholder="Depreme Dayanaklılık" aria-label="Depreme Dayanaklılık">
                  </div>

            </div>
            <div class="d-grid gap-2 mt-5" style="margin-bottom: 100px;">
                <button class="btn btn-primary" type="submit">İlanı Tamamla</button>
              </div>
            </form>               
             
            </div>
        </div>
      </div>        <!--/Row-->
  </div>            <!--/Container-->




  <div class="container bottom"> <!--Footer-->
    <%- include('partials/_footer') -%>
  </div>      <!--/Footer-->


    <!-- Optional JavaScript; choose one of the two! -->

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

