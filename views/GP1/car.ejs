<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="/style.css">
    <title>House & Cars </title>
  </head>
  <body class="bg-light">
        <!--Navbar Start-->
        <%- include('partials/_navbar') -%>
        <!-- Navbar End -->
        
<div class="container ">            <!--Container-->
  <div class="row">               <!--Row-->
    <div class="col-4">         <!--Side Bar Start-->
      <%- include('partials/_sidebar') -%>
    </div>      <!--Side Bar End-->
                
    <div class="col-8">
      <div class="row">
        <h1 class="fs-4 text-primary "> <%=car.ilanbaslik%> </h1>
      </div>
      <div class="row">
        <div class="col-6"><!--Carousel-->
          <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-indicators">
              <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
              <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
              <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
            </div>
            <div class="carousel-inner">
              
                <div class="carousel-item active">
                  <img src="<%=car.ilanfoto[0]%>"class="img-fluid d-block w-100" alt="...">
                </div>
                <% for (let i=1 ; i<=(car.ilanfoto.length)-1; i++) { %>
                <div class="carousel-item">
                  <img src="<%=car.ilanfoto[i]%>"class="img-fluid d-block w-100" alt="...">
                </div>
                  <% } %>
                
                 
                

              
              
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Next</span>
            </button>
          </div>
        </div>      <!--/Carousel-->
        <div class="col-6">   <!--CarDetails-->
          <div class="card mb-3">
            <div class="card-body">
              <div class="row">
                <div class="col-sm-3">
                  <h6 class="mb-0">Tür</h6>
                </div>
                <div class="col-sm-9 text-secondary">
                  <%=car.tür%>
                </div>
              </div>
              <hr>
              <div class="row">
                <div class="col-sm-3">
                  <h6 class="mb-0">Marka</h6>
                </div>
                <div class="col-sm-9 text-secondary">
                  <%=car.marka %>
                </div>
              </div>
              <hr>
              <div class="row">
                <div class="col-sm-3">
                  <h6 class="mb-0">Model</h6>
                </div>
                <div class="col-sm-9 text-secondary">
                  <%=car.model %>
                </div>
              </div>
              <hr>
              <div class="row">
                <div class="col-sm-3">
                  <h6 class="mb-0">Yıl</h6>
                </div>
                <div class="col-sm-9 text-secondary">
                  <%=car.yıl %>
                </div>
              </div>
              <hr>
              <div class="row">
                <div class="col-sm-3">
                  <h6 class="mb-0">Vites</h6>
                </div>
                <div class="col-sm-9 text-secondary">
                  <%=car.vites %>
                </div>
              </div>
              <hr>
              <div class="row">
                <div class="col-sm-3">
                  <h6 class="mb-0">KM</h6>
                </div>
                <div class="col-sm-9 text-secondary">
                  <%=car.km %>
                </div>
              </div>
              <hr>
              <div class="row">
                <div class="col-sm-3">
                  <h6 class="mb-0">Renk</h6>
                </div>
                <div class="col-sm-9 text-secondary">
                  <%=car.renk %>
                </div>
              </div>
              <hr>
              <div class="row">
                <div class="col-sm-3">
                  <h6 class="mb-0">Motor Gücü</h6>
                </div>
                <div class="col-sm-9 text-secondary">
                  <%=car.bg %>
                </div>
              </div>
              <hr>
              <div class="row">
                <div class="col-sm-3">
                  <h6 class="mb-0">Motor Hacmi</h6>
                </div>
                <div class="col-sm-9 text-secondary">
                  <%=car.motorhacmi %>
                </div>
              </div>    
              <hr>
              <form action="/car/addfavcar" method="post">
                 <input type="hidden" name="car_id" value="<%=car._id%>">
              <div class="row">
                <div class="col-sm-3">
                  <h6 class="mb-0">Favoriye ekle</h6>
                  
                </div>
                <div class="col-sm-9 text-secondary">
                  <button > <a href=""><img src="https://img.icons8.com/ios-filled/50/000000/like--v2.png"/></a> </button>
                </div>
              </div> 
              </form>

            </div>
          </div>
        </div><!--/CarDetails-->
                          <!--Product Explonation-->
              <div class="row">
                <div class="col-5 ">
                  <h1 class="fs1 mt-3">Detail</h1> 
                  <div class="card" style="background-color: rgb(218, 218, 189);">
                    <div class="card-body" style="color: rgb(0, 0, 0);">
                      <%=car.ilanaciklama %>
                    </div>
                  </div>
                </div>
                
                <div class="col-5 mt-3">
                  <h1 class="fs-1">Seller Info</h1>
                  <div class="card">
                    <div class="card-body">
                      <div class="row">
                        <div class="col-sm-6">
                          <h6 class="mb-0">Full Name</h6>
                        </div>
                        <div class="col-sm-6 text-secondary">
                          <%=car.ilansahibi %>
                        </div>
                      </div>
                      <hr>
                      <div class="row">
                        <div class="col-sm-6">
                          <h6 class="mb-0">Telephone</h6>
                        </div>
                        <div class="col-sm-6 text-secondary">
                          <a href="tel:555-555-555"><%=car.telefon %></a>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>      <!--/Product Explonation-->




        
        
  </div>                <!--/Row-->


 
</div>                  <!--/Container-->


<div class="container bottom"> <!--Footer-->
  <%- include('partials/_footer') -%>
</div>      <!--/Footer--> 


  

<!-- Optional JavaScript; choose one of the two! -->

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

