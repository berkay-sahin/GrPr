<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="style.css">
    <title>House & Cars </title>
  </head>
  <body class="bg-light">
<!--Navbar Start-->

  <%- include('partials/_navbar') -%>

<!-- Navbar End -->


<div class="container ">       <!--Container-->
    <div class="row">          <!--Row-->
      <div class="col-sm-4">  
        <%- include('partials/_sidebar') -%>
      </div>         <!--Side Bar End-->
       <div class="col-8">
        <div class="container">
            <div class="main-body">
            
                  <!-- Breadcrumb -->
                  <nav aria-label="breadcrumb" class="main-breadcrumb">
                    <ol class="breadcrumb">
                      <li class="breadcrumb-item"><a href="/">Home</a></li>
                      
                      <li class="breadcrumb-item active" aria-current="page">User Profile</li>
                    </ol>
                  </nav>
                  <!-- /Breadcrumb -->
                  <!--Profile Card-->
                  <div class="row gutters-sm">
                    <div class="col-md-4 mb-3">
                      <div class="card">
                        <div class="card-body">
                          <div class="d-flex flex-column align-items-center text-center">
                            <img src="https://cdn.pixabay.com/photo/2015/10/05/22/37/blank-profile-picture-973460_1280.png" alt="Admin" class="rounded" width="200">
                            <div class="mt-3">
                              
                              <h4><%= user.name %></h4>
                              <p class="text-muted font-size-sm"><%= user.phone %></p>
                            </div>
                          </div>
                        </div>
                      </div>
                      

                    </div>  
                    <div class="col-md-8">
                      <div class="card mb-3">
                        <div class="card-body">
                          <div class="row">
                            <div class="col-sm-3">
                              <h6 class="mb-0">Full Name</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                              <%= user.name %>  <%= user.surname %>
                            </div>
                          </div>
                          <hr>
                          <div class="row">
                            <div class="col-sm-3">
                              <h6 class="mb-0">Email</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                              <%= user.email %>
                            </div>
                          </div>
                          <hr>
                          <div class="row">
                            <div class="col-sm-3">
                              <h6 class="mb-0">Phone</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                              <%= user.phone %>
                            </div>
                          </div>
                          <hr>
                          <div class="row">
                            <div class="col-sm-3">
                              <h6 class="mb-0">Address</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                              <%= user.adress %>
                            </div>
                          </div>
                          <div class="row mt-4">
                            <div class="col-sm-3"></div>
                            <div class="col-sm-9 text-secondary">
                              <input type="button" class="btn btn-primary px-4" value="Edit Profile">
                            </div>
                            
                    </div>
                  </div>    <!--/Profile Card-->
                          
                </div>
                    
            </div>
            <div class="container"> 
              <div class="row">
                <% for (let i=(user.favoriler.length) - 1 ; i >= 0; i--) { %>
                <div class="col-3">
                <a href="house/<%=user.favoriler[i].slug %>"style="text-decoration: none;"><img src="<%=user.favoriler.ilanfoto%>" alt="" class="img-fluid img-thumbnail">
                 <figcaption class="fs-5"style="color:black;"> <%= user.favoriler[i].ilanbaslik %></figcaption>
                </a>
                </div>
              <% } %> 
              </div>

            </div>
              
        </div> 
      </div>
    </div>      <!--/Row-->

    <div class="container fixed-bottom"> <!--Footer-->
      <%- include('partials/_footer') -%>
    </div>      <!--/Footer-->
  </div>          <!--/Container-->
 




  

<!-- Optional JavaScript; choose one of the two! -->

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

    <!-- Option 2: Separate Popper and Bootstrap JS -->
