<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="style.css">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <title>Hello, world!</title>
  </head>
  <body>

    <!--Navbar Start-->
 <%- include('partials/_navbar') -%>
  <!-- Navbar End -->

  <div class="container">
      <div class="row">
        <div class="col-4">         <!--Side Bar Start-->
          <%- include('partials/_sidebar') -%>
          </div>      <!--Side Bar End-->
        
            <div class="col-8" >
              <form method="post" action="/addcar" class="" encType="multipart/form-data" >
                <div class="row">
                <div class="form-floating mb-2">
                    <input type="text" name="ilanbaslik" class="form-control" id="floatingInput" placeholder="/">
                    <label class="ms-2" for="floatingInput">İlan Başlığı</label>
                  </div>
               
            </div>
               <div class="col-8 ">
                <div class="mb-3">
                    <label for="formFile" class="form-label">İlanınıza Resim Ekleyin</label>
                    <input name="ilanfoto" class="form-control" type="file"   id="formFile">
                  </div>
            </div> 
            <div class="col-12">
                <div class="form-floating mb-2">
                    <input name="ilanaciklama" type="text" class="form-control" id="floatingInput" placeholder="/">
                    <label class="ms-2" for="floatingInput">İlan Açıklaması</label>
                  </div>
            </div>
            <div class="row">
              <div class="col-6 mt-2">
                <input type="text" name="ilansahibi" class="form-control" placeholder="İlan Sahibi" aria-label="İlan sahibi">
              </div>

              <div class="col-6 mt-2">
                <input type="text" name="telefon" class="form-control" placeholder="Telefon" aria-label="İlan sahibi">
              </div>
              
                <div class="col-6 mt-2">
                    <input type="text"  name="tür" class="form-control" placeholder="Tür" aria-label="Tür">
                  </div>
                

                  <div class="col-6 mt-2">
                    <input type="text" name="marka" class="form-control" placeholder="Marka" aria-label="Marka">
                  </div>
                  
                  <div class="col-6 mt-2">
                    <input type="text" name="model" class="form-control" placeholder="Model" aria-label="Model">
                  </div>
                  <div class="col-6 mt-2">
                    <input type="text" name="yıl" class="form-control" placeholder="Yıl" aria-label="Yıl">
                  </div>
                  <div class="col-6 mt-2">
                    <input type="text" name="vites" class="form-control" placeholder="Vites" aria-label="Vites">
                  </div>
                  <div class="col-6 mt-2">
                    <input type="text" name="km" class="form-control" placeholder="KM" aria-label="KM">
                  </div>
                  <div class="col-6 mt-2">
                    <input type="text" name="renk" class="form-control" placeholder="Renk" aria-label="Renk">
                  </div>
                  <div class="col-6 mt-2">
                    <input type="text" name="bg" class="form-control" placeholder="Motor Gücü" aria-label="Motor Gücü">
                  </div>
                  <div class="col-6 mt-2">
                    <input type="text" name="motorhacmi" class="form-control" placeholder="Motor Hacmi" aria-label="Motor Hacmi">
                  </div>
            </div>
            <div class="d-grid gap-2 mt-5" style="margin-bottom: 250px;">
                <button class="btn btn-primary" type="submit">İlanı Tamamla</button>
              </div>
             </form>
            </div>
          
        </div>
      
      </div>        <!--/Row-->
  </div>            <!--/Container-->


  <div class="container bottom"> <!--Footer-->
    <%- include('partials/_footer') -%>
  </div>      <!--/Footer-->
  




    <!-- Optional JavaScript; choose one of the two! -->

    <!-- Option 1: Bootstrap Bundle with Popper -->
